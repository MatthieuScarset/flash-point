# FlashPoint Environment Configuration
# Copy this file to .env.local and fill in your values

# Yellow Network ClearNode WebSocket URL
# Sandbox (testnet): wss://clearnet-test.yellow.com/ws
# Production: wss://clearnet.yellow.com/ws
VITE_CLEARNODE_URL=wss://clearnet-test.yellow.com/ws

# Matchmaking Server URL (for multiplayer)
VITE_MATCHMAKING_URL=ws://localhost:3001

# Default bet amount in USDC (6 decimals)
# 1000000 = 1 USDC
VITE_DEFAULT_BET_AMOUNT=1000000

# Enable debug mode for extra logging
VITE_DEBUG=true
